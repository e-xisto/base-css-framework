{
	"name": "base-css-framework",
	"version": "0.1.1",
	"description": "Base CSS Framework & Styleguide",
	"scripts": {
		"dev": "npx npm-run-all --serial dev:del dev:webpack",
		"build": "npx npm-run-all --serial prod:del prod:webpack prod:copy",
		"dev:del": "rimraf dist && rimraf docs",
		"dev:webpack": "nodemon --watch src/docs/ --exec 'webpack-dev-server --mode=development'",
		"prod:del": "rimraf dist && rimraf docs",
		"prod:webpack": "npx webpack --mode=production",
		"prod:copy": "npx copyfiles -f dist/css/base.css docs/css && npx copyfiles -f dist/js/base.js docs/js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/e-xisto/base-css-framework.git"
	},
	"keywords": [
		"base",
		"css",
		"framework",
		"sass"
	],
	"author": "Juan Miguel Guerrero <juanmiguel@existo.es> (https://www.existo.es)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/e-xisto/base-css-framework/issues"
	},
	"homepage": "https://github.com/e-xisto/base-css-framework#readme",
	"dependencies": {
		"simple-parallax-js": "^5.1.0"
	},
	"devDependencies": {
		"@types/swiper": "^5.2.1",
		"copy-webpack-plugin": "^5.1.1",
		"copyfiles": "^2.1.1",
		"css-loader": "^1.0.0",
		"extract-loader": "^3.0.0",
		"file-loader": "^2.0.0",
		"html-loader": "^0.5.5",
		"html-webpack-plugin": "^3.2.0",
		"mini-css-extract-plugin": "^0.4.3",
		"node-sass": "^4.13.1",
		"nodemon": "^1.18.4",
		"npm-run-all": "^4.1.5",
		"nunjucks": "^3.1.3",
		"nunjucks-isomorphic-loader": "^2.0.2",
		"optimize-css-assets-webpack-plugin": "^5.0.1",
		"sass-loader": "^7.1.0",
		"style-loader": "^0.23.0",
		"swiper": "^5.3.0",
		"ts-loader": "^5.2.1",
		"typescript": "^3.1.1",
		"uglifyjs-webpack-plugin": "^2.0.1",
		"url-loader": "^1.1.1",
		"webpack": "^4.20.2",
		"webpack-cli": "^3.1.2",
		"webpack-dev-server": "^3.1.9"
	}
}
